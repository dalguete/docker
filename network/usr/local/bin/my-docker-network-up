#!/bin/sh

# The args passed are:
# $1 - hostname
# $2 - ip

# Add an entry at the bottom of /etc/hosts file, with data passed, only if that
# is not set already
grep -Fxq "$2 $1.docker #my-docker-network was here" /etc/hosts

if [ $? = 1 ]
then
  # Not found, so add
  echo "$2 $1.docker #my-docker-network was here" >> /etc/hosts
fi

